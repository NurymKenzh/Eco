@model Eco.Models.TargetTerritory
@using Eco.Controllers
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer["Details"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@SharedLocalizer["Details"]</h2>

<div>
    <h4>@SharedLocalizer["TargetTerritory"]</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TerritoryType)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TerritoryType.Name)
        </dd>
        @if (Model.CityDistrictId != null)
    {
        <dt>
            @Html.DisplayNameFor(model => model.CityDistrict)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CityDistrict.Name)
        </dd>
}
        <dt>
            @Html.DisplayNameFor(model => model.TerritoryNameKK)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TerritoryNameKK)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TerritoryNameRU)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TerritoryNameRU)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.GISConnectionCode)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.GISConnectionCode)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Post)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Post)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AdditionalInformationKK)
        </dt>
        <dd>
            <pre>@Model.AdditionalInformationKK</pre>
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AdditionalInformationRU)
        </dt>
        <dd>
            <pre>@Model.AdditionalInformationRU</pre>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">@SharedLocalizer["Edit"]</a> |
    <a asp-action="Index">@SharedLocalizer["BackToList"]</a>
</div>
