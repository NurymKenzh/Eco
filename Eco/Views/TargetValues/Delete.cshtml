@model Eco.Models.TargetValue
@using Eco.Controllers
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer["Delete"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@SharedLocalizer["Delete"]</h2>

<h3>@SharedLocalizer["Delete"]?</h3>
<div>
    <h4>@SharedLocalizer["TargetValue"]</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Target.TypeOfTargetId)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Target.TypeOfTarget.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TargetId)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Target.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Target.MeasurementUnitId)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Target.MeasurementUnit.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TargetTerritory.TerritoryTypeId)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TargetTerritory.TerritoryType.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TargetTerritoryId)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TargetTerritory.TerritoryName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TargetValueType)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TargetValueTypeName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Value)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Value)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AdditionalInformationKK)
        </dt>
        <dd>
            <pre>@Model.AdditionalInformationKK</pre>
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AdditionalInformationRU)
        </dt>
        <dd>
            <pre>@Model.AdditionalInformationRU</pre>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@SharedLocalizer["Delete"]" class="btn btn-default" /> |
        <a asp-action="Index">@SharedLocalizer["BackToList"]</a>
    </form>
</div>
