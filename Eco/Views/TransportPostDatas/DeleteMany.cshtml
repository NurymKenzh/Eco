@model Eco.Models.TransportPostData
@using Eco.Controllers
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer["Delete"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@SharedLocalizer["Delete"]</h2>

<h3>@SharedLocalizer["Delete"]?</h3>

<h4>@SharedLocalizer["TransportPostDatas"]</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("DeleteMany", "TransportPostDatas", FormMethod.Post))
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TransportPostId" class="control-label"></label>
                <select asp-for="TransportPostId" class="form-control" asp-items="ViewBag.TransportPostId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="@SharedLocalizer["Delete"]" class="btn btn-default" />
            </div>
        }
    </div>
</div>

@if (!string.IsNullOrEmpty(ViewBag.Report))
{
    <div>
        @Html.Raw(ViewBag.Report)
    </div>
}

<br />
<div>
    <a asp-action="Index">@SharedLocalizer["BackToList"]</a>
</div>