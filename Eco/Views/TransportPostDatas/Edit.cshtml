@model Eco.Models.TransportPostData
@using Eco.Controllers
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer["Edit"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@SharedLocalizer["Edit"]</h2>

<h4>@SharedLocalizer["TransportPostData"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TransportPostId" class="control-label"></label>
                <select asp-for="TransportPostId" class="form-control" asp-items="ViewBag.TransportPostId"></select>
                <span asp-validation-for="TransportPostId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Month" class="control-label"></label>
                <input asp-for="Month" class="form-control" />
                <span asp-validation-for="Month" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Day" class="control-label"></label>
                <input asp-for="Day" class="form-control" />
                <span asp-validation-for="Day" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hour" class="control-label"></label>
                <input asp-for="Hour" class="form-control" />
                <span asp-validation-for="Hour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Minute" class="control-label"></label>
                <input asp-for="Minute" class="form-control" />
                <span asp-validation-for="Minute" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Second" class="control-label"></label>
                <input asp-for="Second" class="form-control" />
                <span asp-validation-for="Second" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TheLengthOfTheInhibitorySignalSec" class="control-label"></label>
                <input asp-for="TheLengthOfTheInhibitorySignalSec" class="form-control" />
                <span asp-validation-for="TheLengthOfTheInhibitorySignalSec" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalNumberOfVehiclesIn20Minutes" class="control-label"></label>
                <input asp-for="TotalNumberOfVehiclesIn20Minutes" class="form-control" />
                <span asp-validation-for="TotalNumberOfVehiclesIn20Minutes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RunningLengthm" class="control-label"></label>
                <input asp-for="RunningLengthm" class="form-control" />
                <span asp-validation-for="RunningLengthm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AverageSpeedkmh" class="control-label"></label>
                <input asp-for="AverageSpeedkmh" class="form-control" />
                <span asp-validation-for="AverageSpeedkmh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@SharedLocalizer["Save"]" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@SharedLocalizer["BackToList"]</a>
</div>

@*@section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }*@

<script>
    $.validator.methods.range = function (value, element, param) {
        var globalizedValue = value.replace(",", ".");
        return this.optional(element) || (globalizedValue >= param[0] && globalizedValue <= param[1]);
    }
    $.validator.methods.number = function (value, element) {
        return this.optional(element) || /-?(?:\d+|\d{1,3}(?:[\s\.,]\d{3})+)(?:[\.,]\d+)?$/.test(value);
    }
</script>