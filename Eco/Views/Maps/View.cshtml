@using Eco.Controllers
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer["Map"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/jquery-ui.css" rel="stylesheet" />
<script src="~/lib/jquery-ui/jquery-ui.js"></script>

<link href="~/lib/openlayers/ol.css" rel="stylesheet" />
<script src="~/lib/openlayers/ol.js"></script>
<link href="~/lib/jstree/dist/themes/default/style.css" rel="stylesheet" />
<script src="~/lib/jstree/dist/jstree.js"></script>

<script src="~/lib/gasparesganga-jquery-loading-overlay/src/loadingoverlay.js"></script>

<style>
    /*легенды*/
    .legend {
        margin: 5px;
        border-bottom-style: solid;
        border-bottom-width: 1px;
    }

    /*таблицы легенд*/
    .table-legend td:nth-child(1) {
        padding: 0px;
    }

    .table-legend td:nth-child(2) {
        padding-left: 20px;
    }

    .table-legend div {
        width: 50px;
        height: 19px;
        border-style: solid;
        border-width: 1px;
    }

    /*jstree word wrap*/
    .jstree-anchor {
        /*enable wrapping*/
        white-space: normal !important;
        /*ensure lower nodes move down*/
        height: auto !important;
        /*offset icon width*/
        padding-right: 24px;
    }
</style>

<div hidden="hidden">
    <input id="Map" type="text" value="@ViewBag.Map" />
    <input id="GeoServerPort" type="text" value="@ViewBag.GeoServerPort" />
    <input id="AirPostsLayerJson" type="text" value="@ViewBag.AirPostsLayerJson" />
    <input id="EcomonsLayerJson" type="text" value="@ViewBag.EcomonsLayerJson" />
    <input id="KazHydrometAirPostsLayerJson" type="text" value="@ViewBag.KazHydrometAirPostsLayerJson" />
    <input id="CompaniesLayerJson" type="text" value="@ViewBag.CompaniesLayerJson" />
    <input id="EmissionSourcesLayerJson" type="text" value="@ViewBag.EmissionSourcesLayerJson" />
    <input id="TransportPostsLayerJson" type="text" value="@ViewBag.TransportPostsLayerJson" />
    <input id="WaterSurfacePostsLayerJson" type="text" value="@ViewBag.WaterSurfacePostsLayerJson" />
    <input id="KazHydrometWaterPostsLayerJson" type="text" value="@ViewBag.KazHydrometWaterPostsLayerJson" />
    <input id="SoilPostsLayerJson" type="text" value="@ViewBag.SoilPostsLayerJson" />
    <input id="KazHydrometSoilPostsLayerJson" type="text" value="@ViewBag.KazHydrometSoilPostsLayerJson" />
    <input id="RawMaterialsCompaniesLayerJson" type="text" value="@ViewBag.RawMaterialsCompaniesLayerJson" />
    <input id="WasteRecyclingCompaniesLayerJson" type="text" value="@ViewBag.WasteRecyclingCompaniesLayerJson" />
    <input id="GreemPlantsPassportsLayerJson" type="text" value="@ViewBag.GreemPlantsPassportsLayerJson" />
    <input id="Look" type="text" value="@SharedLocalizer["Look"]" />
    <input id="GoTo" type="text" value="@SharedLocalizer["GoTo"]" />
</div>

@await Html.PartialAsync("_ViewHtml")
@await Html.PartialAsync("_ViewScriptsLayers")
@await Html.PartialAsync("_ViewScripts")