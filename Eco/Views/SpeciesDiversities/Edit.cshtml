@model Eco.Models.SpeciesDiversity
@using Eco.Controllers
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer["Edit"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@SharedLocalizer["Edit"]</h2>
<h4>@SharedLocalizer["SpeciesDiversity"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="CityDistrictId" class="control-label"></label>
                <select asp-for="CityDistrictId" class="form-control" asp-items="ViewBag.CityDistrictId"></select>
                <span asp-validation-for="CityDistrictId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlantationsTypeId" class="control-label"></label>
                <select asp-for="PlantationsTypeId" class="form-control" asp-items="ViewBag.PlantationsTypeId"></select>
                <span asp-validation-for="PlantationsTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TreesNumber" class="control-label"></label>
                <input asp-for="TreesNumber" class="form-control" />
                <span asp-validation-for="TreesNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@SharedLocalizer["Save"]" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">@SharedLocalizer["BackToList"]</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
