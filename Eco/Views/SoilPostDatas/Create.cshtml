@model Eco.Models.SoilPostData
@using Eco.Controllers
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer["Create"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@SharedLocalizer["Create"]</h2>
<h4>@SharedLocalizer["SoilPostData"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SoilPostId" class="control-label"></label>
                <select asp-for="SoilPostId" class="form-control" asp-items="ViewBag.SoilPostId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SoilContaminantId" class="control-label"></label>
                <select asp-for="SoilContaminantId" class="form-control" asp-items="ViewBag.SoilContaminantId"></select>
            </div>
            <div class="form-group">
                <label asp-for="YearOfSampling" class="control-label"></label>
                <input asp-for="YearOfSampling" class="form-control" />
                <span asp-validation-for="YearOfSampling" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MonthOfSampling" class="control-label"></label>
                <input asp-for="MonthOfSampling" class="form-control" />
                <span asp-validation-for="MonthOfSampling" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DayOfSampling" class="control-label"></label>
                <input asp-for="DayOfSampling" class="form-control" />
                <span asp-validation-for="DayOfSampling" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GammaBackgroundOfTheSoil" class="control-label"></label>
                <input asp-for="GammaBackgroundOfTheSoil" class="form-control" />
                <span asp-validation-for="GammaBackgroundOfTheSoil" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConcentrationValuemgkg" class="control-label"></label>
                <input asp-for="ConcentrationValuemgkg" class="form-control" />
                <span asp-validation-for="ConcentrationValuemgkg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@SharedLocalizer["Create"]" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@SharedLocalizer["BackToList"]</a>
</div>

