                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayNameFor(model => model.KazHydrometWaterPostReport.KazHydrometWaterContaminantReports[i].AverageAnnualConcentrationmgl)
                        </td>
                        <td>
